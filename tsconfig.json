{
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "test/**/*.spec.ts",
    "lib",
    "node_modules"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2018",
    "module": "node16",
    "moduleResolution": "node16",
    "outDir": "./lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "pretty": true,
    "allowJs": true,
    "checkJs": true,
    "downlevelIteration": true,
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017",
      "esnext",
      "es2020.string"
    ],
    "types": [
      "chai",
      "node",
      "@qavajs/memory",
      "@qavajs/validation"
    ]
  }
}
